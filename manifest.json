{
  "manifest_version": 3,
  "name": "Ars2Usd",
  "description": "Equivalencia en dolar blue del precio listado en MeLi.",
  "version": "0.0.0.6",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Clic para mostrar precio en USD ðŸ˜€"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.mercadolibre.com.ar/*",
        "https://articulo.mercadolibre.com.ar/*"
      ],
      "run_at": "document_end",
      "js": ["scripts/content.js"]
    },
    {
      "matches": [
        "https://www.mercadolibre.com.ar/*",
        "https://*.mercadolibre.com.ar/*"
      ],
      "run_at": "document_end",
      "js": ["scripts/most_selled.js"]
    }
  ],
  "icons": {
    "16": "icons/LOGO-16.png",
    "32": "icons/LOGO-32.png",
    "48": "icons/LOGO-48.png",
    "128": "icons/LOGO-128.png"
  }
}
